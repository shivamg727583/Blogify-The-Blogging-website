<%- include(`./partials/head`)%>

<div class="container w-full mx-auto px-10 mt-10 flex justify-center items-center">
    <form action="/blogging" method="post" enctype="multipart/form-data" class="w-1/3 flex flex-col py-10  px-4 border-2 shadow rounded-xl ">
 <h1 class="font-bold text-2xl text-center text-blue-800">Add Blog</h1>
 
        <label for="coverImage" class="mt-4 mb-2  font-semibold">Cover Image</label>
 <input type="file" id="coverImage" name="coverImage" required class="px-3 py-2 border-2 outline-none  " >
<label for="title" class="mt-4  mb-2 font-semibold">Title</label>
<input type="text" id="title" name="title" required class="px-3 py-2 border-2 outline-none "placeholder="Enter Blog Title">
<label for="body" class="mt-4  mb-2  font-semibold">Body</label>
<textarea id="body" name="body" required class="px-3 py-3 border-2 outline-none resize-none" placeholder="Enter Blog Content"  rows="3"></textarea>
<input type="submit" value="Submit" class="px-2 py-3 bg-blue-500 text-white font-semibold rounded-xl shadow mt-4 hover:bg-blue-700">

    </form>
</div>





<%- include(`./partials/foot`)%>

</div>
