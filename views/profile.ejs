<%- include(`./partials/head`)%>


<div class="container w-full flex  justify-between gap-2 mt-6">
    
    <div class="profile-view w-1/3 rounded-lg shadow-md h-[500px] bg-white flex flex-col items-center justify-center">
  <div class="profile-pic py-6 flex justify-center items-center flex flex-col "> 
    <div class="pic w-[120px] h-[120px] rounded-full bg-gray-400  overflow-hidden">
    <img src="/image/upload/<%=  user.profilepic %>" alt="" class="w-full h-full object-cover rounded-full">
   </div>
   <a href="/profilepic/<%= user._id %>">Edit profile pic</a>
</div>
<div class="content py-4">
    <h1 class="text-2xl font-semibold pb-2"> <%= user.fullname %></h1>
    <h2 class="text-md pb-2">Email : <%= user.email %></h2>
    <h2 class="text-md pb-2">ID : <%= user._id%></h2>
    <h2 class="text-md pb-2">Role : <strong><%= user.role %></strong></h2>

</div>
<div class="action w-full mt-6 px-6 flex items-center justify-between">
    <a href="/update-profile" class="bg-orange-500 hover:bg-orange-700 text-white px-3 py-2 font-medium rounded-xl ">Edit Profile</a>

<a href="/logout" class="px-3 py-2 shadow-md text-white font-medium bg-red-500 rounded-xl hover:bg-red-700">Logout</a>
</div>
    </div>
    <div class="content-view w-2/3 rounded-lg shadow-md min-h-[500px] bg-gray-50 px-4 py-3 flex flex-col items-center gap-8 ">
        <h1 class="text-xl font-semibold">All My Blogs</h1>
        
<div class="div flex flex-wrap justify-center gap-4 w-full">
    <% blogs.forEach(blog => { %>
        <div class="blog w-[200px]  h-[200px] px-3 py-2 bg-gray-200 rounded-xl flex flex-col items-center justify-center hover:shadow-md">
            <div class="pro w-full flex justify-between mb-2">
                <h2 class="text-[12px] font-light">Role : <%= user.role %></h2>
                <h2 class="font-light text-[12px]"><%= blog.createdAt.toISOString().split('T')[0] %></h2>
            </div>
            <div class="pic w-full h-[100px] overflow-hidden rounded-lg">
                <img src="/image/<%= blog.coverImage %>" alt="" class="w-full h-full object-cover">
            </div>
            <h3 class="text-lg font-semibold mt-1 "><%= blog.title %></h3>
            <a href="/blog/<%= blog._id %>" class="px-2 py-2 rounded-lg bg-blue-500 hover:bg-blue-700 text-white text-sm hover:shadow-md">Explore</a>
        </div>
      
    <% }) %>
</div>
        

    </div>

</div>

   



<%- include(`./partials/foot`)%>

</div>

</body>
</html>
