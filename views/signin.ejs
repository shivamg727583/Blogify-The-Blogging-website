<%- include(`./partials/head`)%>


    <div class="lg:w-2/6 md:w-1/2 bg-gray-100 rounded-lg p-8 flex flex-col md:ml-auto w-full mt-6 md:mt-0  shadow bg-gray-200 relative right-1/2  translate-x-1/2 top-6">
       <form action="/signin" method="post">
         
        <h2 class="text-gray-900 text-xl font-medium title-font mb-5 text-center">Sign In</h2>
      
        <div class="relative mb-4">
          <label for="email" class="leading-7 text-sm text-gray-600">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter Your Email" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        <div class="relative mb-4">
            <label for="password" class="leading-7 text-sm text-gray-600">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter Your Password" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
       
   
        <button type="submit" class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg w-full mt-4">Sign in</button>
        <p class="text-xs text-gray-500 mt-3 ml-3">/ OR If you are new user then <a href="/signin" class="text-blue-600 font-medium">Sign up</a></p>
      </div>
       </form>
    </div>



<%- include(`./partials/foot`)%>

</div>

</body>
</html>
